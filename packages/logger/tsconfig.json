{
   "extends": "@repo/typescript-config/base.json",
   "compilerOptions": {
      "lib": ["ES2015"],
      "outDir": "./dist",
      "types": ["jest", "node"],
      "moduleResolution": "node",
      "typesVersions": {
         "*": {
            "*": ["src/*", "src/*/index"]
         }
      },
      "publishConfig": {
         "typesVersions": {
            "*": {
               "*": ["dist/*.d.ts", "dist/*/index.d.ts"]
            }
         }
      }
   },
   "include": ["."],
   "exclude": ["node_modules", "dist"]
}
